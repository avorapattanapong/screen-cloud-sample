generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Warehouse {
  id        String   @id @default(cuid())
  name      String   @unique
  latitude  Float
  longitude Float
  stock     Int

  // Relations
  allocations OrderAllocation[]
}

model Order {
  id             String             @id @default(cuid())
  createdAt      DateTime           @default(now())
  quantity       Int
  shippingLat    Float
  shippingLng    Float
  totalPrice     Float
  discount       Float
  shippingCost   Float
  isValid        Boolean
  status         String             @default("pending")
  email          String
  allocations    OrderAllocation[]
}

model OrderAllocation {
  id          String   @id @default(cuid())
  quantity    Int
  order       Order     @relation(fields: [orderId], references: [id])
  orderId     String
  warehouse   Warehouse @relation(fields: [warehouseId], references: [id])
  warehouseId String
}
